@model IEnumerable<PopCinema.Models.FilmesAtores>

@{
    ViewBag.Title = "Index";
}



@if (User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>

}
<table class="table" style="color:white; font-weight:400; background-color:black">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Ator.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filme.Titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Personagem)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Ator.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filme.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personagem)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
